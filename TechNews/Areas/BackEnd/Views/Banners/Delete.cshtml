@model TechNews.Areas.BackEnd.Models.Banner

@{
    ViewData["Title"] = "刪除橫幅";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">刪除橫幅</h1>

    <!-- Description -->
    <p class="text-muted">
        您即將刪除以下橫幅資料，該操作無法恢復。請確認是否要繼續。
    </p>

    <!-- Banner Details -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">橫幅詳細資訊</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">排序</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SortOrder)</dd>

                <dt class="col-sm-3 font-weight-bold">標題</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3 font-weight-bold">描述</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3 font-weight-bold">圖片預覽</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Url.Content($"~/{Model.ImagePath}")" alt="@Model.ImageAlt" class="img-fluid img-thumbnail" style="max-width: 200px;" />
                    }
                    else
                    {
                        <span class="text-muted">未提供圖片</span>
                    }
                </dd>

                <dt class="col-sm-3 font-weight-bold">啟用狀態</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge badge-success">啟用</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">停用</span>
                    }
                </dd>

                <dt class="col-sm-3 font-weight-bold">發布日期</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PublishDate)</dd>

                <dt class="col-sm-3 font-weight-bold">到期日期</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ExpireDate)</dd>
            </dl>
        </div>
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-end mt-4">
        <form asp-action="Delete" class="mr-3">
            <input type="hidden" asp-for="BannerId" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> 確認刪除
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> 返回列表
        </a>
    </div>
</div>
